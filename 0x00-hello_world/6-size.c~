#include <stdio.h>
/**
 * main - Entry point
 * @void: No argument
 *
 * Description: This function prints out sizes of various types
 *
 * Return: Returns a value of 0
 */

int main(void)
{
	char c;
	int i;
	float f;

	printf("Size of a char: %lu byte(s)\n", sizeof(c));
	printf("Size of an int: %lu byte(s)\n", sizeof(i));
	printf("Size of a long int: %lu byte(s)\n", (unsigned long)sizeof(i));
	printf("Size of a long long int: %lu byte(s)\n", (unsigned long long)sizeof(i));
	printf("Size of a float: %lu byte(s)\n", sizeof(f));

	return (0);
}
